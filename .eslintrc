{
  "extends": "airbnb",
  "rules": {
    "comma-dangle": "off",
    "arrow-body-style": "off",
    "import/no-extraneous-dependencies": [
      "error", { "devDependencies": true }
    ],
    "react/forbid-prop-types": [
      "error", { "forbid": ["any", "array"] }
    ],
    "global-require": "off"
  },
  "env": {
    "browser": true,
    "mocha": true
  },
  "globals": {
    "API_GATEWAY_URL": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/webpack.config.prod.js"
      }
    }
  }
}
